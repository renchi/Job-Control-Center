                </WrapPanel>
                    
            </TabItem>
            <TabItem Header="App Settings">
                <local:PaletteSelector>
                    <local:PaletteSelector.DataContext>
                        <local:PaletteSelectorViewModel />
                    </local:PaletteSelector.DataContext>
                </local:PaletteSelector>
            </TabItem>
        </dragablz:TabablzControl>
        </materialDesign:DialogHost>
    </dockablz:Layout>

</controls:MetroWindow>
